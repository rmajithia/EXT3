{
  "manifest_version": 2,
  "name":    "Service Now Extension",
  "version": "0.0",
  "offline_enabled": true,

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
 "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "content_scripts": [{
    "matches":    ["https://*/*","*://*.service/*"],
    "js":         ["content.js","bootstrap.min.js","jquery.min.js"],
    "css":         ["bootstrap.min.css","custom.css"],
    "run_at":     "document_idle",
    "all_frames": false
  }],

  "page_action": {
    "default_title": "Service Now Extension--NEW",
    //"default_icon": {
    //    "19": "img/icon19.png",
    //    "38": "img/icon38.png"
    //},
    "default_popup": "popup.html"
  },

  // No special permissions required...
  "permissions": ["tts","storage","notifications","contextMenus","tabs"]
}